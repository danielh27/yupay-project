<div class="d-flex general">
  <%= render "shared/sidebar" %>
    <div class="content">
      <%= render "shared/navbar_dashboard" %>
      <div class="px-5 py-3">
        <div class="container-all">
          <div class="container-card">
            <div class="card-product">
              <div class="image-product">
                <%= image_tag "https://images.unsplash.com/photo-1618225747659-433d5a5c6af7?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=580&q=80" %>
              </div>
              <div class="info-product">
                <% string = @product.name.split(" ") %>
                <h1><%= string.first %></h1>
                <h3 class="mb-3"><%= string.last %> </h3>
                <p class="stock"> Stock:<%= @product.stock%></p>
                <p class="size"><%= @product.size %> </p>
                <p class="category"> Categoria: <%= @product.category %> </p>
                <h2> S/. <%= @product.price %> </h2>
              </div>
            </div>
          </div>

          <div class="container-table">
            <h4>Movimientos</h4>
            <table class="table table-borderless">
                <tr>
                  <th scope="col">PRODUCTO</th>
                  <th scope="col">HORA REGISTRADA</th>
                  <th scope="col">HORA DE SALIDA</th>
                  <th scope="col">PRECIO</th>
                  <th scope="col">STOCK</th>
                  <th scope="col">TOTAL VENDIDOS</th>
                  <th scope="col">TALLA</th>
                </tr>
                <tr class="table-infos">
                <% @list.each do |col| %>
                  <td scope="row"> <%= col.product.name %></td>
                  <td scope="row"> <%= col.created_at %></td>
                  <td scope="row">Mar 20, 2019 23:14</td>
                  <td scope="row"> <%= col.product.price %></td>
                  <td scope="row">100/500</td>
                  <td scope="row"> <%= col.quantity %>/100</td>
                  <td scope="row"> <%= col.product.size %></td>
                <% end %>
              </tr>
            </table>
          </div>
        </div>
      </div>
    </div>
</div>